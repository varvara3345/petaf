@{
    ViewData["Title"] = "Мини-игры и викторины";
}

<div class="games-container">
    <div class="games-header text-center">
        <h1 class="display-4 mb-3">Мини-игры и викторины</h1>
        <p class="lead mb-5">Проверьте свои знания о домашних животных в наших увлекательных играх и викторинах!</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Викторина по уходу -->
        <div class="col">
            <div class="game-card">
                <div class="game-card-icon">
                    <i class="fas fa-paw"></i>
                </div>
                <div class="game-card-content">
                    <h3>Викторина по уходу</h3>
                    <p>Проверьте свои знания о правильном уходе за домашними животными</p>
                    <div class="game-card-footer">
                        <a href="@Url.Action("PetCareQuiz", "Games")" class="btn btn-play">
                            <i class="fas fa-play-circle"></i>
                            Начать викторину
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Гайд по потерянным животным -->
        <div class="col">
            <div class="game-card">
                <div class="game-card-icon">
                    <i class="fas fa-search"></i>
                </div>
                <div class="game-card-content">
                    <h3>Гайд по потерянным животным</h3>
                    <p>Узнайте, как правильно действовать при встрече с потерявшимся питомцем</p>
                    <div class="game-card-footer">
                        <a href="@Url.Action("LostPetGuide", "Games")" class="btn btn-play">
                            <i class="fas fa-play-circle"></i>
                            Пройти гайд
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Интересные факты -->
        <div class="col">
            <div class="game-card">
                <div class="game-card-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <div class="game-card-content">
                    <h3>Интересные факты</h3>
                    <p>Откройте для себя увлекательные факты о домашних животных</p>
                    <div class="game-card-footer">
                        <a href="@Url.Action("PetFacts", "Games")" class="btn btn-play">
                            <i class="fas fa-play-circle"></i>
                            Читать факты
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .games-container {
            padding: 2rem 0;
            background: linear-gradient(135deg, #f5f7fa 0%,#222222 100%);
            min-height: 100vh;
        }

        .games-header {
            margin-bottom: 3rem;
        }

        .games-header h1 {
            color: #2c3e50;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .games-header .lead {
                color: #4C6444;
            font-size: 1.2rem;
        }

        .game-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            position: relative;
            overflow: hidden;
        }

        .game-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .game-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
                background: linear-gradient(90deg, #ced4da, #1a2c25);
        }

        .game-card-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ced4da, #1a2c25);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
        }

        .game-card-icon i {
            font-size: 2.5rem;
            color: white;
        }

        .game-card-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .game-card h3 {
            color: #2c3e50;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .game-card p {
            color: #7f8c8d;
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .game-card-footer {
            margin-top: auto;
        }

        .btn-play {
            background: linear-gradient(135deg, #ced4da, #1a2c25);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-play:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
            color: white;
        }

        .btn-play i {
            font-size: 1.2rem;
        }

        @@media screen and (max-width: 768px) {
            .games-container {
                padding: 1rem;
            }

            .game-card {
                padding: 1.5rem;
            }

            .game-card-icon {
                width: 60px;
                height: 60px;
            }

            .game-card-icon i {
                font-size: 2rem;
            }

            .game-card h3 {
                font-size: 1.3rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
    
        if (!document.querySelector('link[href*="font-awesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
            document.head.appendChild(link);
        }

    
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.game-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
} 