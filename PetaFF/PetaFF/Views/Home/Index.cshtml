@model IEnumerable<PetaFF.Models.PetAd>
@using PetaFF.Extensions
@{
    ViewData["Title"] = "Главная";
}

<div class="theme-switch-wrapper">
    <i class="bi bi-sun-fill theme-icon"></i>
    <label class="theme-switch">
        <input type="checkbox" id="theme-toggle">
        <span class="slider"></span>
    </label>
    <i class="bi bi-moon-fill theme-icon"></i>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Добро пожаловать в PetaFF</h2>
            
            @if (Context.Session.GetInt32("UserId") == null)
            {
                <div class="alert alert-info text-center">
                    <h4>Для просмотра объявлений необходимо войти в систему</h4>
                    <p>Пожалуйста, <a asp-controller="Account" asp-action="Login" class="alert-link">войдите</a> или <a asp-controller="Account" asp-action="Register" class="alert-link">зарегистрируйтесь</a></p>
                </div>
            }
            else
            {
                <h3 class="mb-4">Последние объявления</h3>
                <div class="row">
                    @foreach (var ad in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(ad.PhotoPath))
                                {
                                    <img src="@ad.PhotoPath" class="card-img-top" alt="Фото животного" style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@ad.Name</h5>
                                    <p class="card-text">@ad.Description</p>
                                    <p class="card-text"><small class="text-muted">Тип: @ad.Type</small></p>
                                    <p class="card-text"><small class="text-muted">Статус: @ad.Status</small></p>
                                    <a asp-controller="PetAd" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-primary">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Добавляем Font Awesome для иконок
        if (!document.querySelector('link[href*="font-awesome"]')) {
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
}
