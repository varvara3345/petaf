@model PetaFF.Models.PetAd

@{
    ViewData["Title"] = "Удаление объявления";
}

<div class="container mt-4">
    <h2>Удаление объявления</h2>
    <div class="alert alert-danger">
        <h4>Вы уверены, что хотите удалить это объявление?</h4>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Имя питомца</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Тип</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Описание</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Статус</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Адрес</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Контактный телефон</dt>
                <dd class="col-sm-9">@Model.ContactPhone</dd>

                <dt class="col-sm-3">Дата пропажи</dt>
                <dd class="col-sm-9">@Model.DateLost?.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Адрес</dt>
                <dd class="col-sm-9">@Model.Address</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div class="mt-3">
                    <img src="@Model.PhotoPath" alt="Фото питомца" class="img-fluid" style="max-width: 300px;" />
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
        </div>
    </form>
</div> 