@using Microsoft.AspNetCore.Mvc.Rendering
@model PetaFF.Models.PetAd

@{
    ViewData["Title"] = "Редактировать объявление";
}

@if (ViewBag.ModelStateErrors != null && ViewBag.ModelStateErrors.Count > 0)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var err in ViewBag.ModelStateErrors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

<div class="container mt-4">
    <h2>Редактировать объявление</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="PhotoPath" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Имя питомца</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label">Тип питомца</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Статус</label>
                    <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="District" class="control-label">Район</label>
                    <select asp-for="District" class="form-control" id="districtSelect" required>
                        <option value="">Выберите район</option>
                        <option value="Центральный">Центральный</option>
                        <option value="Фрунзенский">Фрунзенский</option>
                        <option value="Советский">Советский</option>
                        <option value="Ленинский">Ленинский</option>
                        <option value="Партизанский">Партизанский</option>
                        <option value="Заводской">Заводской</option>
                        <option value="Московский">Московский</option>
                        <option value="Октябрьский">Октябрьский</option>
                    </select>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label">Адрес пользователя</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastSeenAddress" class="control-label">Место, где видели в последний раз</label>
                    <div class="row">
                        <div class="col-md-8">
                            <select id="streetSelect" class="form-control" disabled>
                                <option value="">Сначала выберите район</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input type="text" id="houseNumber" class="form-control" placeholder="Номер дома" />
                        </div>
                    </div>
                    <input type="hidden" asp-for="LastSeenAddress" id="lastSeenAddress" />
                    <span asp-validation-for="LastSeenAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContactPhone" class="control-label">Контактный телефон</label>
                    <input asp-for="ContactPhone" class="form-control" />
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateLost" class="control-label">Дата потери</label>
                    <input asp-for="DateLost" class="form-control" type="date" />
                    <span asp-validation-for="DateLost" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Фото</label>
                    <input type="file" name="photo" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <div class="mt-2">
                            <img src="@Model.PhotoPath" alt="Текущее фото" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/districts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const districtSelect = document.getElementById('districtSelect');
            const streetSelect = document.getElementById('streetSelect');
            const houseNumber = document.getElementById('houseNumber');
            const lastSeenAddress = document.getElementById('lastSeenAddress');

            // Инициализация при загрузке страницы
            if (districtSelect.value) {
                updateStreets(districtSelect.value);
                parseLastSeenAddress();
            }

            districtSelect.addEventListener('change', function() {
                updateStreets(this.value);
            });

            function updateStreets(district) {
                streetSelect.innerHTML = '<option value="">Выберите улицу</option>';
                
                if (district && districtStreets[district]) {
                    streetSelect.disabled = false;
                    districtStreets[district].forEach(street => {
                        const option = document.createElement('option');
                        option.value = street;
                        option.textContent = street;
                        streetSelect.appendChild(option);
                    });
                } else {
                    streetSelect.disabled = true;
                }
            }

            function parseLastSeenAddress() {
                const address = lastSeenAddress.value;
                if (address) {
                    const match = address.match(/(.*?)(?:,\s*д\.\s*(\d+))?$/);
                    if (match) {
                        const street = match[1];
                        const house = match[2];
                        
                        // Находим и выбираем улицу в списке
                        const streetOption = Array.from(streetSelect.options).find(opt => opt.value === street);
                        if (streetOption) {
                            streetOption.selected = true;
                        }
                        
                        // Устанавливаем номер дома
                        if (house) {
                            houseNumber.value = house;
                        }
                    }
                }
            }

            function updateLastSeenAddress() {
                const street = streetSelect.value;
                const house = houseNumber.value;
                if (street) {
                    lastSeenAddress.value = `${street}${house ? ', д. ' + house : ''}`;
                } else {
                    lastSeenAddress.value = '';
                }
            }

            streetSelect.addEventListener('change', updateLastSeenAddress);
            houseNumber.addEventListener('input', updateLastSeenAddress);
        });
    </script>
} 